include  ../../admin/index
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Makanan
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input data makanan
                            // /.box-header
                            // form start
                            form.form-horizontal(method="POST", action='/'+makanans._id + '/editmakanan')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='kodemakanan') Kode Makanan
                                        .col-sm-10
                                            input#kodemakanan.form-control(type='text' name="kodemakanan" placeholder='Kode Makanan' value= (kodemakanan == undefined) ? makanans.kodemakanan: kodemakanan)
                                    .form-group
                                        label.col-sm-2.control-label(for='namamakanan') Nama Makanan
                                        .col-sm-10
                                            input#namamakanan.form-control(type='text' name="namamakanan" placeholder='Nama Makanan' value= (namamakanan == undefined) ? makanans.namamakanan: namamakanan)
                                    .form-group
                                        label.col-sm-2.control-label(for='resep') Resep
                                        .col-sm-10
                                            input#resep.form-control(type='text' name="resep" placeholder='Resep' value= (resep == undefined) ? makanans.resep: resep)
                                    .form-group
                                        label.col-sm-2.control-label(for='harga') Harga
                                        .col-sm-10
                                            input#harga.form-control(type='text' name="harga" placeholder='Harga' value= (harga == undefined) ? makanans.harga: harga)


                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer